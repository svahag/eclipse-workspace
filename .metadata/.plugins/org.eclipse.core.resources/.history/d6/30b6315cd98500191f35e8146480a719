package newP;
import java.util.*;
public class NewC {
	
	public static void main(String args[]) {
		Cipher c1 = new Cipher();
		Scanner ch1 = new Scanner(System.in);
		Scanner ch2 = new Scanner(System.in);
		
		
		while(1==1) {
			System.out.print("press 1 to cipher, press 2 to decipher:");
			int i1=ch1.nextInt();
			
			int choiceMade[]= {0,0};
			while(choiceMade[0]!=1 && choiceMade[1]!=1)
			if(i1==1) {
				System.out.println("1 to enter text, 2 to enter key");
				int i2=ch2.nextInt();
				if(i2==1) {
					c1.setText();
					if(c1.getTxt().length()>0) {
							choiceMade[0]=1;
					}
				}
				else if(i2==2) {
					c1.setKey();
					choiceMade[1]=1;
				}
				else {
					System.out.println("you entered invalid choice, please reenter");
				}
			}
		}
		//c1.setCipher();
		//c1.getCipher();


		}
		
		
		
		
		
		
		

	
	
}
